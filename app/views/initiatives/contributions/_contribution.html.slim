li.contributor
  .image
    - if contribution.hide_name?
      = image_tag('user.svg')
    - else
      = contribution.user.display_image
  .info
    h4 
      - if contribution.hide_name?
        = "Apoiador an√¥nimo"
      - else
        = truncate contribution.user.display_name, length: 40
    - unless contribution.hide_value? && !policy(@initiative).update?
      h5= "R$ #{contribution.display_value},00"
    - if policy(@initiative).update?
      h5= mail_to contribution.user.email
