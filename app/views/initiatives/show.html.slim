- suppress_headline_and_article!
- content_for :title do
  = @initiative.name
- content_for :url do
  = initiative_url(@initiative)
- content_for :pre_header do
  .image
    - if @initiative.image.present?
      = link_to image_tag(@initiative.image.url, style: "margin-top: #{@initiative.margin}"), @initiative.image.url, target: :_blank
- content_for :header do
  h1= @initiative.name
- content_for :post_header do
  section.status
    h2
      span.currency= "R$ "
      span.number= @initiative.total_value
      div= "arrecadados por mês"
    h2
      span.number= @initiative.total_contributions
      div= "pessoa apoia".pluralize(@initiative.total_contributions)
article id=dom_id(@initiative)
  section.first_text= @initiative.first_text_html
  section.contribute
    a.button href=new_initiative_contribution_path(@initiative) Quero contribuir
  section.second_text= @initiative.second_text_html
  - if @initiative.second_text.present? && @initiative.second_text.length > 400
    section.contribute
      a.button href=new_initiative_contribution_path(@initiative) Quero contribuir
  - if policy(@initiative).update?
    section.admin
      h4 Atualizar informações da sua iniciativa
      .field#image
        = form_for(@initiative) do |form|
          = form.label :image
          = form.file_field :image
      .field
        = label_tag :name, Initiative.human_attribute_name(:name)
        .editable data-attribute="name" data-placeholder="Nome do seu evento"= @initiative.name
      .field
        = label_tag :first_text, Initiative.human_attribute_name(:first_text)
        .editable data-attribute="first_text" data-formtype="textarea" data-placeholder="Clique aqui para editar o texto que aparece antes do botão para contribuir com sua iniciativa."= @initiative.first_text
      .field
        = label_tag :second_text, Initiative.human_attribute_name(:second_text)
        .editable data-attribute="second_text" data-formtype="textarea" data-placeholder="Clique aqui para editar o texto que aparece depois do botão para contribuir com sua iniciativa."= @initiative.second_text
      .field
        = label_tag :moip_token, Initiative.human_attribute_name(:moip_token)
        .editable data-attribute="moip_token" data-placeholder="Informe seu token de acesso à API do MoIP"= @initiative.moip_token
      .field
        = label_tag :moip_key, Initiative.human_attribute_name(:moip_key)
        .editable data-attribute="moip_key" data-placeholder="Informe sua chave de acesso à API do MoIP"= @initiative.moip_key
  section.links
    - if policy(@initiative).destroy?
      = link_to 'Excluir', @event, method: :delete, data: { confirm: 'Você está certo disso?' }, class: "button"
